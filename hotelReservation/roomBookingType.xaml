        <Button x:Name="bookConferenceRoom" Content="Book Conference Room" HorizontalAlignment="Left" Margin="251,301,0,0" VerticalAlignment="Top" Width="271" Height="138" Click="bookConferenceRoom_Click" Background="#FFED4231" Foreground="#FFFAF6F6" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="144,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="96" Width="489" FontSize="48" FontWeight="Bold" FontFamily="MV Boli" Foreground="#FF293E2E"><Run Text="Choose ROOM type">
                <Run.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <GradientStop Color="#FF7CC0ED" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FFE9E9E9" Offset="0.652"/>
